<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" prefHeight="80.0" prefWidth="1480.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaproject.EmployeeCardController">
   <children>
      <ImageView fx:id="admin_empPicture" fitHeight="60.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="admin_empId" prefHeight="60.0" prefWidth="90.0" text="STAFF ID" />
      <Label fx:id="admin_empUser" prefHeight="60.0" prefWidth="90.0" text="ACCOUNT" />
      <Label fx:id="admin_empName" prefHeight="60.0" prefWidth="160.0" text="FULL NAME" />
      <Label fx:id="admin_empGender" prefHeight="60.0" prefWidth="90.0" text="GENDER" />
      <Label fx:id="admin_empPhone" prefHeight="60.0" prefWidth="120.0" text="PHONE" />
      <Label fx:id="admin_empEmail" prefHeight="60.0" prefWidth="200.0" text="EMAIL" />
      <Label fx:id="admin_empJoinDate" prefHeight="60.0" prefWidth="120.0" text="JOIN DATE" />
      <Label fx:id="admin_empStatus" prefHeight="60.0" prefWidth="90.0" text="STATUS" />
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="350.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleUpdateStatus" text="UPDATE STATUS" />
            <Button mnemonicParsing="false" onAction="#handleResetPW" prefHeight="31.0" prefWidth="132.0" text="RESET PW" />
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
