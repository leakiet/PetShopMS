                  </Spinner>
                  <Button fx:id="btnAddtoInvoice" mnemonicParsing="false" prefHeight="31.0" prefWidth="158.0" text="Add to Invoice">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
