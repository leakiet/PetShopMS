<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaproject.ProductCardController">
    <children>
      <Label fx:id="proId" layoutX="85.0" layoutY="4.0" prefHeight="41.0" prefWidth="76.0">
         <font>
            <Font size="20.0" />
         </font></Label>
      <ImageView fx:id="proImage" fitHeight="250.0" fitWidth="250.0" layoutX="1.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="proName" layoutY="250.0" prefHeight="34.0" prefWidth="250.0" />
      <HBox layoutY="280.0" prefHeight="35.0" prefWidth="240.0">
         <children>
              <Label prefHeight="35.0" prefWidth="120.0" text="Stock:" />
            <Label fx:id="proQuantity" prefHeight="34.0" prefWidth="170.0" />
         </children>
      </HBox>
      <HBox layoutY="315.0" prefHeight="35.0" prefWidth="240.0">
         <children>
            <Label prefHeight="35.0" prefWidth="120.0" text="Price:" />
              <Label fx:id="proPrice" alignment="CENTER_RIGHT" prefHeight="34.0" prefWidth="170.0" />
         </children>
      </HBox>
      <Spinner fx:id="pcSpinner" layoutX="-1.0" layoutY="355.0" prefHeight="41.0" prefWidth="100.0" />
      <Button fx:id="btnAddInvoice" layoutX="103.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleAddToInvoice" prefHeight="41.0" prefWidth="147.0" text="Add To Invoice" />
      <Separator layoutX="23.0" layoutY="249.0" prefWidth="200.0" />
    </children>
</AnchorPane>
